<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Head Tag -->
		<%- include('../partials/head', {title}); %>
		<link rel="stylesheet" href="/css/custome-input.css" />
	</head>

	<body>
		<main>
			<!-- Your Content -->
			<div class="container">
				<div class="row">
					<div class="col s12 m6 offset-m3">
						<div class="card">
							<div class="card-content">
								<span class="card-title black-text">Login</span>
								<div class="divider"></div>
								<form action="/login" method="post">
									<div class="row row--bottom-10px margin--top-1">
										<label for="username" class="col s12 m3 form--label">Username</label>
										<div class="col s12 m9">
											<input
												type="text"
												id="username"
												class="browser-default form--control"
											/>
										</div>
									</div>
									<div class="row row--bottom-10px">
										<label for="password" class="col s12 m3 form--label">Password</label>
										<div class="col s12 m9">
											<input
												type="password"
												id="password"
												class="browser-default form--control"
											/>
										</div>
									</div>
									<div class="row row--bottom-10px">
										<div class="col s2 offset-s9">
											<button class="btn mb-1 light-blue">Login</button>
										</div>
									</div>
								</form>
							</div>
							<div class="card-action light-blue">
								<a href="/register" class="white-text">Registration</a>
								<a href="/register" class="white-text">Forgot Password</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>

		<!-- Main javascript -->
		<%- include('../partials/main-js'); %>
		<script></script>
	</body>
</html>
