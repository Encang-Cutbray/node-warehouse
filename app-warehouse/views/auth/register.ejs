<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Head Tag -->
		<%- include('../partials/head', {title}); %>
		<link rel="stylesheet" href="/css/custome-input.css" />
	</head>

	<body>
		<main>
			<!-- Your Content -->
			<div class="container">
				<div class="row">
					<div class="col s12 m6 offset-m3">
						<div class="card">
							<div class="card-content">
								<span class="card-title black-text">Registration</span>
								<div class="divider"></div>
								<form action="/register" method="post">
									<div class="row row--bottom-10px margin--top-1">
										<label for="email" class="col s12 m3 form--label">Email</label>
										<div class="col s12 m9">
											<input
												type="text"
												id="email"
												class="browser-default form--control"
											/>
										</div>
									</div>
									<div class="row row--bottom-10px margin--top-1">
										<label for="username" class="col s12 m3 form--label">Username</label>
										<div class="col s12 m9">
											<input
												type="text"
												id="username"
												class="browser-default form--control"
											/>
										</div>
									</div>
									<div class="row row--bottom-10px">
										<label for="password" class="col s12 m3 form--label">Password</label>
										<div class="col s12 m9">
											<input
												type="password"
												id="password"
												class="browser-default form--control"
											/>
										</div>
									</div>
									<div class="row row--bottom-10px">
											<button class="btn  red lighten-1 right margin--vertical-1">Register</button>
									</div>
								</form>
							</div>
							<div class="card-action red lighten-1">
								<a href="/login" class="white-text">Login</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>

		<!-- Main javascript -->
		<%- include('../partials/main-js'); %>
		<script></script>
	</body>
</html>
