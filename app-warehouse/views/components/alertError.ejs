<!-- Error Messages -->
<% if (errorMessage) { %>
	<style>
		span#close-alert{
			cursor: pointer;
		}
	</style>
	<div class="card card--rounded padding--vertical-1 animate__animated animate__bounceIn" id="alert-message">
		<div class="padding--vertical-1 padding--horizontal-1 center-align">
			<span class="red-text ">
				<% if (errorMessage[0].hasOwnProperty('msg') ) { %>
					<%=  errorMessage[0].msg %>
				<% } else { %>
					<%= errorMessage[0] %>
				<% } %>
			</span>
			<span class="right" id="close-alert" onclick="removeAlert()">
				<i class="material-icons">close</i>
			</span>
		</div>
	</div>
	<script>
		function removeAlert() {
			const alert = document.getElementById('alert-message');
			alert.classList.add('animate__fadeOut');
			alert.remove();
		}
		setTimeout(()=> {
			removeAlert()
		}, 5000)
	</script>
<% } %>
