<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Head Tag -->
		<%- include('../../partials/head', {title}); %>
		<link rel="stylesheet" href="/css/custome-input.css" />
	</head>

	<body>
		<main>
			<!-- Your Content -->
			<div class="container">
				<div class="row">
					<div class="col s12 m6 offset-m3">

						<!-- Error Messages -->
						<%- include('../../components/alertError'); %>

						<div class="card card animate__animated animate__fadeIn">
							<div class="card-content">
								<span class="card-title black-text">Login</span>
								<div class="divider margin--bottom-1"></div>
								<form action="/login" method="post">
									<!-- csrfToken -->
									<%- include('../../components/csrfInput'); %>

									<!-- Username -->
									<%- include('../../components/input', {labelName: 'Email',
									id:'email', nameInput:'email', typeInput: 'email', 
									placeholder: 'Email', value: populate ? populate.email : null}); %>

									<!-- Password -->
									<%- include('../../components/input', {labelName: 'Password',
									id:'password', nameInput:'password', placeholder: 'Password'}); %>

									<!-- Button Login -->
									<div class="row">
										<button class="btn light-blue right margin--vertical-1">
											Login
										</button>
									</div>
								</form>
							</div>
							<div class="card-action light-blue">
								<a href="/register" class="white-text">Registration</a>
								<a href="/forgot-password" class="white-text">Forgot Password</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>

		<!-- Main javascript -->
		<%- include('../../partials/main-js'); %>
		<script></script>
	</body>
</html>
