<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Head Tag -->
	<%- include('../../partials/head', {title}); %>
	<link rel="stylesheet" href="/css/custome-input.css" />
</head>

<body>
	<main>
		<!-- Your Content -->
		<div class="container">
			<div class="row">
				<div class="col s12 m6 offset-m3">
					<div class="card animate__animated animate__fadeIn">
						<div class="card-content">
							<span class="card-title black-text">Forgot Password</span>
							<div class="divider margin--bottom-1"></div>
							<form action="/forgot-password" method="post">
								<!-- csrfToken -->
								<%- include('../../components/csrfInput'); %>

								<!-- email -->
								<%- include('../../components/input', {labelName: 'Email',
									id:'email', nameInput:'email', typeInput: 'email', placeholder: 'Email'  }); %>

								<!-- Button Login -->
								<div class="row row--bottom-10px">
									<button class="btn blue darken-3 right margin--vertical-1">
										Send
									</button>
								</div>
							</form>
						</div>
						<div class="card-action blue darken-3">
							<a href="/register" class="white-text">Registration</a>
							<a href="/login" class="white-text">login</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Main javascript -->
	<%- include('../../partials/main-js'); %>
	<script></script>
</body>

</html>
